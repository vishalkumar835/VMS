@model IEnumerable<VehicalServiceApplication.UserTable>

@{
    ViewBag.Title = "User Details";
}

<h2>List Of User Details</h2>
<button class="btn ">
    @Html.ActionLink("Create User Details", "Create")
</button>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ServiceCenterId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceCenterId)
            </td>
            <td>
                <button class="btn">
                    @Html.ActionLink("Edit", "Edit", new { id = item.UserId }) 
                </button>
                <button class="btn">
                    @Html.ActionLink("Details", "Details", new { id = item.UserId }) 
                </button>
            <button class="btn">
                @Html.ActionLink("Delete", "Delete", new { id = item.UserId })
            </button>
                  
            </td>
        </tr>

    }
    

</table>
